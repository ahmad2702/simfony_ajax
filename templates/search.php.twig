    <script type="text/javascript">
        $(function(){
            $("#suchField").keyup(function(){
                var search = $("#suchField").val();
                $.ajax({
                    type: "POST",
                    url: "/ajax",
                    data: {"search": search},
                    cache: false,
                    success: function(response){
                        $("#ergebnisse").html(response);
                    }
                });
                return false;
            });
        });
    </script>








